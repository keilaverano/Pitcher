<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7ddd3"
    tools:context=".LogInActivity" >
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >
    
    	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    		<TextView
    		    android:id="@+id/title"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:text="P i t c h e r"
    		    android:layout_marginTop="30dp"
    		    android:layout_gravity="center"
    		    android:textSize="40sp"
    		    android:padding="10dp"
    		    android:textColor="@color/brown" />

    	<EditText
        	android:id="@+id/username_field"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:layout_marginTop="50dp"
        	android:ellipsize="start"
        	android:ems="15"
        	android:gravity="center"
        	android:hint="Username"
       	 	android:text="keilaverano"
        	android:textColor="@color/blue"
        	android:textSize="20sp" />

    	<EditText
    	    android:id="@+id/password_field"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="40dp"
    	    android:ellipsize="start"
    	    android:ems="15"
    	    android:gravity="center"
    	    android:hint="Password"
    	    android:inputType="textPassword"
    	    android:text="keila829"
    	    android:textColor="@color/blue"
    	    android:textSize="20sp" />

    	<Button
        	android:id="@+id/submit_button"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="49dp"
        	android:background="@drawable/button_changing_color"
        	android:text="Submit"
        	android:textColor="@color/ivory" />
	
    	<LinearLayout
        	android:id="@+id/signup_holder"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:layout_marginTop="40dp" >

        	<TextView
            	android:id="@+id/no_account"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="No account?"
            	android:textColor="@color/blue"
            	android:textSize="15sp" />

        	<TextView
        	    android:id="@+id/sign_up"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_marginLeft="5dp"
        	    android:text="@string/sign_up"
        	    android:textColor="@color/yellow_green"
            	android:textSize="15sp" />
    	
    	</LinearLayout>
     
	</LinearLayout>    
       
  </ScrollView>

</LinearLayout>