<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#e7ddd3">

    <ImageView
        android:id="@+id/user_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/name_of_user"
        android:bottom="1dp"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/time_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/name_of_user"
        android:text="00:00" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_of_user"
        android:layout_below="@+id/name_of_user"
        android:text="username" />

    <TextView
        android:id="@+id/idea_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@+id/user_profile_photo"
        android:text="Title" />

    <TextView
        android:id="@+id/idea_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idea_title"
        android:layout_below="@+id/idea_title"
        android:text="Description" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/idea_description"
        android:background="#ebebd3" >

        <ImageView
            android:id="@+id/reply_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:padding="4dp"
            android:src="@drawable/ic_reply" />

        <ImageView
            android:id="@+id/collaborate_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/reply_icon"
            android:padding="4dp"
            android:src="@drawable/ic_collaborate" />

        <ImageView
            android:id="@+id/good_idea_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/collaborate_icon"
            android:padding="4dp"
            android:src="@drawable/ic_good_idea" />

        <ImageView
            android:id="@+id/bad_idea_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/good_idea_icon"
            android:padding="4dp"
            android:src="@drawable/ic_bad_idea" />
    </RelativeLayout>

    <TextView
        android:id="@+id/name_of_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idea_title"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="Name of user"
        android:textSize="20sp" />

</RelativeLayout>
